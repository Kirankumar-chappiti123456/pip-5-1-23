#include<stdio.h>
#include<string.h>
#include<stdlib.h>
int main()
{
    int n;
    printf("enter the size of string:");
    scanf("%d",&n);
    char *ptr=(char*)malloc(n*sizeof(char));
    printf("enter the character:");
    scanf("%s",ptr);
    int i=0,j=0;
    for(i=0;ptr[i]!='\0';i++)
    {
        while(!((ptr[i]>=65 && ptr[i]<=90)|| (ptr[i]>=97 && ptr[i]<=122)|| (ptr[i]=='\0')))
        {
            for(j=i;ptr[j]!='\0';j++)
            {
                ptr[j]=ptr[j+1];
            }
            ptr[j]='\0';
        }
    }
    printf("%s",ptr);
}

using dynamic allocation.
